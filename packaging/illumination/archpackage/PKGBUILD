# Maintainer: Bob Mottram (4096 bits) <bob@robotics.uk.to>
pkgname=illumination
pkgver=6.0.0
pkgrel=1
pkgdesc="Illumination Software Creator allows you to quickily (and visually) build apps for Android, iOS, HTML5, Flash and Python/GTK.  Illumination generates raw source code (including XCode and Eclipse project files when necessary) for each platform"
arch=('x86_64' 'i686')
url="http://www.lunduke.com"
license=('GPL2')
groups=()
depends=('glibc' 'expat' 'glib2' 'gtk2')
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=($pkgname-$pkgver.tar.gz)
noextract=()
md5sums=(59c144d9c1dcd7739c7ba5d723e7d232)
build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make
}
package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}
